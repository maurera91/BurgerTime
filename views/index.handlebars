<div class="jumbotron">
    <h1 class = "display-4">BurgerTime!</h1>
</div>
<div class="container">
    <div class = "row">
        <div class = "col-6">
            <h4>Burgers To be Devoured</h4>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                {{#each}}
            </ul>
        </div>
        <div class = "col-6">
            <h4>Devoured Burgers</h4>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{#each}}
            </ul>

        </div>
    </div>
    <div class = "row">
        <h2>Add A Burger!</h2>
        <form class="create-form">
            <div class = "form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id = "burger" name="name">
            </div>
            <button type = "submit">Add Burger!</button>
        </form>

    </div>
</div>