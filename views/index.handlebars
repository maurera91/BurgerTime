<div class="jumbotron">
    <h1 class = "display-4 text-center">BurgerTime!</h1>
    <img src = "/assets/images/149301.png"  class="mx-auto img-fluid" style="display: block; margin-left: auto; margin-right: auto;width: 25%;"/>
</div>
<div class="container">
    <div class = "row pb-3">
        <div class = "col-5 border mr-1 pt-1">
            <h4 class = "text-center">Burgers To be Devoured</h4>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{>burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class = "col-5 border ml-1 pt-1">
            <h4 class = "text-center" >Devoured Burgers</h4>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>

        </div>
    </div>
    <div class = "row">
        <div class = "col-12">
        <h2 class = "text-center">Add A Burger!</h2>
        <hr>
        <form class="create-form">
            <div class = "form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id = "burger" name="name">
            </div>
            <button type = "submit">Add Burger!</button>
        </form>

    </div>
</div>